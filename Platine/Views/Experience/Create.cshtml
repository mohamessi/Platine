@model Platine.Database.BusinessObject.Experience

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form action="/Experience/AddExperience">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="email">Start :</label>
                <input type="date" class="form-control" name="Start" id="email">
            </div>
            <div class="form-group">
                <label for="email">End :</label>
                <input type="date" class="form-control" name="End" id="email">
            </div>
            <div class="form-group">
                <label>Job :</label>
                <input type="text" class="form-control" name="Job">
            </div>
            <div class="form-group">
                <label>Entreprise :</label>
                <input type="text" class="form-control" name="Enterprise">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="comment">Description:</label>
                <textarea class="form-control" rows="5" id="comment" name="Description"></textarea>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

